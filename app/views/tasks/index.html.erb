<p id="notice"><%= notice %></p>
<%= form_with(url: tasks_path, method: :get, local: true) do |f| %>
<div class="field">
  <%= f.label :name, 'タスク名' %>
  <%= f.text_field :name %>
</div>
<div class="field">
  <%= f.label :status, 'ステータス' %>
  <%= f.select :status, [["未着手", "未着手"], ["着手中", "着手中"], ["完了", "完了"]], include_blank: "選択して下さい" %>
</div>
<div class="actions">
  <%= f.submit '検索' %>
</div>
<% end %>
<h1>Tasks</h1>

<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>詳しい内容</th>
      <th>ステータス</th>
      <th>優先度</th>
      <th>終了期限</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name %></td>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.priority %></td>
        <td><%= task.deadline.strftime("%Y-%m-%d") %></td>
        <td><%= link_to '詳細', task %></td>
        <td><%= link_to '編集', edit_task_path(task) %></td>
        <td><%= link_to '削除', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to "終了期限でソートする", tasks_path(sort_deadline: "true") %>
<%= link_to "優先度でソートする", tasks_path(sort_priority: "true") %>

<%= link_to 'New Task', new_task_path %>
