<%= form_with(model: task, local: true) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %>件のエラーがあります</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "タスク名" %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description, "詳しい内容" %><br>
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :deadline, "終了期限" %><br>
    <%= f.date_field :deadline %>
  </div>

  <div class="field">
    <%= f.label :status, "ステータス" %><br>
    <%= f.select :status, [["未着手", "未着手"], ["着手中", "着手中"], ["完了", "完了"]], include_blank: "選択して下さい" %>
  </div>

  <div class="field">
    <%= f.label :priority, "優先度" %><br>
    <%= f.select :priority, [["低", "低"], ["中", "中"], ["高", "高"]], include_blank: "選択して下さい" %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
