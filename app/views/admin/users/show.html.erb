<h2>ユーザー詳細画面</h2>
<%= "#{@user.name}のタスク" %><br>
<table id="table">
    <thead>
      <tr>
        <th width="100"><%= t('activerecord.attributes.task.name') %></th>
        <th width="620"><%= t('activerecord.attributes.task.description') %></th>
        <th width="100"><%= t('activerecord.attributes.task.status') %></th>
        <th width="100"><%= t('activerecord.attributes.task.priority') %></th>
        <th width="100"><%= t('activerecord.attributes.task.deadline') %></th>
        <th width="100"><%= t('activerecord.attributes.task.created_at') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td><%= task.description %></td>
          <td><%= task.status %></td>
          <td><%= task.priority %></td>
          <td><%= task.deadline.strftime("%Y-%m-%d") %></td>
          <td><%= task.created_at.strftime("%Y-%m-%d") %></td>
        </tr>
      <% end %>
    </tbody>
  </table>