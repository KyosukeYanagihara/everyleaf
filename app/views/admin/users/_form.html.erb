<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "エラー") %>があります。</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model:[:admin, @user], local: true) do |f| %>  
  <div><%= f.label :name %></div>
  <div><%= f.text_field :name %></div>
  <div><%= f.label :email %></div>
  <div><%= f.email_field :email %></div>
  <div><%= f.label :password %></div>
  <div><%= f.password_field :password %></div>
  <div><%= f.label :password_confirmation %></div>
  <div><%= f.password_field :password_confirmation %></div>
  <div>
    <%= f.radio_button :admin, true %>
    <%= f.label :admin, '管理者権限あり', value: true %>
  </div>
  <div>
    <%= f.radio_button :admin, false %>
    <%= f.label :admin, '管理者権限なし', value: false %>
  </div>
  <div><%= f.submit "登録する" %></div>
<% end %>